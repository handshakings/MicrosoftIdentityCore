@page
@model DotnetCoreIdentity.Pages.LoginModel
@{
}


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-lg-4">
            <h1 class="mb-3">Login</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for=LogModel.Email>Email: </label>
                    <input type="text" class="form-control" asp-for=LogModel.Email />
                    <span class=text-danger asp-validation-for=LogModel.Email></span>
                </div>
                <div class="mb-3">
                    <label class=form-label asp-for=LogModel.Password>Password</label>
                    <input type="password" asp-for=LogModel.Password class=form-control />
                    <span class=text-danger asp-validation-for=LogModel.Password></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for=LogModel.RememberMe class=form-check-input />
                    <label class=form-check-label asp-for=LogModel.RememberMe>Remember Me?</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

        </div>
    </div>
</div>